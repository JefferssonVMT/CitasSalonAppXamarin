<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondologin">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:id="@+id/imageView1"/>

    <TextView
        android:text="Agenda tu cita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#9B3E49"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView1" />

    <EditText
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:hint="Agrega una descripcion"
        android:textSize="15dip"
        android:layout_width="315dp"
        android:layout_height="65dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_input"
        android:id="@+id/editText_Descripcion" />

    <Spinner
        android:id="@+id/spinner_TipoServicios"
        android:textSize="15dip"
        android:layout_width="315dp"
        android:layout_height="65dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/rounded_input"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:spinnerMode="dialog"/>

    <Spinner
        android:id="@+id/spinner_Servicios"
        android:textSize="15dip"
        android:layout_width="315dp"
        android:layout_height="65dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/rounded_input"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:spinnerMode="dialog"/>

    <EditText
        android:hint="Numero de deposito"
        android:inputType="textMultiLine"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="15dip"
        android:layout_width="315dp"
        android:layout_height="65dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_input"
        android:id="@+id/editText_Deposito" />

    <androidx.appcompat.widget.AppCompatButton
        android:text="Guardar cita"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_height="65dp"
        android:layout_width="315dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_btn"
        android:textColor="@android:color/white"
        android:layout_marginBottom="50dp"
        android:id="@+id/button_Guardar" />
    
</LinearLayout>
</ScrollView>